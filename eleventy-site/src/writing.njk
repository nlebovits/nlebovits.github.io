<h2>Writing & Talks</h2>

<ul class="post-list">
{% for post in collections.writing | reverse %}
  <li class="post-item">
    <div class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></div>
    <div class="post-date">{{ post.date | readableDate }}</div>
  </li>
{% endfor %}
{% for post in collections.talks | reverse %}
  <li class="post-item">
    <div class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></div>
    <div class="post-date">{{ post.date | readableDate }}</div>
  </li>
{% endfor %}
</ul>
